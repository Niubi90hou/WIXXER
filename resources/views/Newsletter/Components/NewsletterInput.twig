<script type="x/template" id="vue-newsletter-input">
        <form :id="'newsletter-input-form_' + _uid" @submit.prevent="validateData">
    <input type="email" :id="'email-input-id_' + _uid" v-model="email" autocomplete="email" placeholder="E-Mail-Adresse" data-validate="mail">
    <button type="button" class="pe-7s-mail-open" @click="validateData" :disabled="isDisabled"></button>

    <div class="col-xs-12" v-if="showPrivacyPolicyCheckbox">
        <div class="form-check small" data-validate>
            <input type="checkbox" style="position: absolute;height: 15px;width: 15px;" :id="'privacy-policy-accept-id_' + _uid" name="privacy-policy-accept" v-model="privacyPolicyValue">
            <label :for="'privacy-policy-accept-id_' + _uid" class="form-check-label">
                {% autoescape false %}
                    {% set policyContent %}
                        <a href="{{ urls.privacyPolicy }}" target="_blank">
                            <span class="text-primary text-appearance">{{ trans("Ceres::Template.checkoutPrivacyPolicy", {"hyphen": "&shy;"}) }}</span>
                        </a>
                    {% endset %}
                    {{ trans('Ceres::Template.newsletterAcceptPrivacyPolicy', {"policy": policyContent} ) }}
                {% endautoescape %}
            </label>
        </div>
    </div>
</form>

</script>
